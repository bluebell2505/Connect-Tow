<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign/Register Page</title>
    <link rel="stylesheet" href="style.css">
</head>
<style>
    /* General Styling */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Arial', sans-serif;
}

body {
    background-color: #f4f4f9;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

/* Wrapper to center the form */
.wrapper {
    background-color: #ffffff;
    padding: 40px 60px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    width: 100%;
    max-width: 400px;
}

/* Form styling */
form h2 {
    margin-bottom: 20px;
    font-size: 24px;
    color: #333;
    text-align: center;
}

.input-group {
    position: relative;
    margin-bottom: 20px;
}

.input-group input {
    width: 100%;
    padding: 12px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
    outline: none;
    transition: all 0.3s ease;
}

.input-group input:focus {
    border-color: #ff4747;
    box-shadow: 0 0 5px rgba(255, 71, 71, 0.5);
}

.input-group label {
    position: absolute;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    color: #888;
    pointer-events: none;
    transition: all 0.3s ease;
}

.input-group input:focus + label,
.input-group input:not(:placeholder-shown) + label {
    top: 0;
    font-size: 12px;
    color: #ff4747;
}

/* Forgot password link */
.forgot-pass {
    text-align: right;
    margin-bottom: 20px;
}

.forgot-pass a {
    color: #ff4747;
    text-decoration: none;
    font-size: 14px;
}

.forgot-pass a:hover {
    text-decoration: underline;
}

/* Button styling */
button.btn {
    width: 100%;
    padding: 12px;
    background-color: #ff4747;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    color: #ffffff;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

button.btn:hover {
    background-color: #e03b3b;
}

/* Sign-up link */
.sign-link {
    text-align: center;
    margin-top: 20px;
}

.sign-link p {
    font-size: 14px;
    color: #333;
}

.signUp-link {
    color: #ff4747;
    text-decoration: none;
}

.signUp-link:hover {
    text-decoration: underline;
}

/* Mobile responsiveness */
@media (max-width: 768px) {
    .wrapper {
        padding: 30px 40px;
    }
}

</style>
<body>
    <section id="Sign-in">
        <div class="wrapper">
            <div class="form-wrapper sign-in">
                <form action="/login" method="POST" id="login-form">
                    <h2>Login</h2>
                    <div class="input-group">
                        <input type="email" required name="email" placeholder="Email">
                        <label for="email">Email</label>
                    </div>
                    <div class="input-group">
                        <input type="password" required name="password" placeholder="Password">
                        <label for="password">Password</label>
                    </div>
                    <div class="forgot-pass">
                        <a href="#">Forgot Password?</a>
                    </div>
                    <button type="submit" class="btn">Login</button>
                    <div class="sign-link">
                        <p>Don't have an account? <a href="/register" class="signUp-link">Sign Up</a></p>
                    </div>
                </form>
                
            </div>
        </div>
    </section>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Check if the user is logged in
            const userId = '<%= userId %>'; // Pass the session variable from the server to the template

            if (userId) {
                // User is logged in, hide login button
                document.querySelector('button.btn').style.display = 'none'; // Hide the login button
            }
        });
    </script>
</body>
</html>
