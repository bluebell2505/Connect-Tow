<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Services - Add to Cart</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            color: #333;
            line-height: 1.6;
        }
        
        h1 {
            text-align: center;
            color: #ff6600;
            font-size: 2.5em;
            margin-top: 20px;
        }
        
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            max-width: 1200px;
            padding: 0 80px;
        }
        
        .services, .cart {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        .services {
            width: 60%;
        }
        
        .cart {
            width: 30%;
            border-left: 4px solid #ff6600;
            padding-left: 25px;
            height: 40%;
        }
        
        .service {
            display: flex;
            flex-direction: column;
            align-items: center;
            border: 2px solid transparent;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 10px;
        }
        
        .service:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }
        
        .service img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            margin-bottom: 15px;
            transition: transform 0.3s ease;
        }
        
        
        
        .service h2 {
            color: #ff6600;
            font-size: 1.8em;
            margin-bottom: 10px;
        }
        
        .service p {
            color: #555;
            font-size: 1em;
            margin-bottom: 10px;
            text-align: center;
        }
        
        .service button {
            background-color: #ff6600;
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 25px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }
        
        .service button:hover {
            background-color: #e65c00;
            transform: translateY(-2px);
        }
        
        .cart h2 {
            color: #ff6600;
            font-size: 1.8em;
            margin-bottom: 20px;
        }
        
        .cart ul {
            list-style-type: none;
            padding: 0;
        }
        
        .cart ul li {
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .cart-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .cart-item span {
            margin: 0 10px;
            font-size: 1.1em;
            color: #333;
        }
        
        .cart-item button {
            background-color: transparent;
            color: #ff6600;
            border: 1px solid #ff6600;
            padding: 0; /* Remove padding to better fit the circular shape */
            border-radius: 50%; /* Make the button circular */
            cursor: pointer;
            font-size: 16px; /* Adjust font size if needed */
            width: 2px; /* Set width */
            height: 2px; /* Set height equal to width */
            display: flex; /* Use flexbox to center the content */
            align-items: center; /* Center vertically */
            justify-content: center; /* Center horizontally */
            margin-right: 5%;
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        
        .cart-item button:hover {
            background-color: #ff6600;
            color: white;
        }
        
        .cart button {
            background-color: #ff6600;
            color: white;
            border: none;
            padding: 15px;
            border-radius: 25px;
            margin-bottom: 5%;
            cursor: pointer;
            font-size: 16px;
            width: 90%;
            margin-top: 20px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }
        
        .cart button:hover {
            background-color: #e65c00;
            transform: translateY(-2px);
        }
        
        .total-price {
            font-weight: bold;
            margin-top: 10px;
            font-size: 1.2em;
            text-align: center;
            color: #333;
        }
        

    </style>
</head>
<body>
    <header>
        <%- include('../partials/Nav2'); %>
      </header>
    <h1>Our Services</h1>
    <div class="container">
        <!-- Services Section -->
        <div class="services">
            <!-- Service 1 -->
            <div class="service">
                <img src="service1.png" alt="Service 1">
                <h2>Service 1</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam vehicula tincidunt tincidunt.</p>
                <p><strong>Price: ₹100</strong></p>
                <button onclick="addToCart('Service 1', 100)">Add to Cart</button>
            </div>

            <!-- Service 2 -->
            <div class="service">
                <img src="service2.png" alt="Service 2">
                <h2>Service 2</h2>
                <p>Suspendisse nec magna et orci fermentum ultricies. Vivamus eget volutpat ligula.</p>
                <p><strong>Price: ₹150</strong></p>
                <button onclick="addToCart('Service 2', 150)">Add to Cart</button>
            </div>

            <!-- Service 3 -->
            <div class="service">
                <img src="service3.png" alt="Service 3">
                <h2>Service 3</h2>
                <p>Pellentesque habitant morbi tristique senectus et netus et malesuada fames.</p>
                <p><strong>Price: ₹200</strong></p>
                <button onclick="addToCart('Service 3', 200)">Add to Cart</button>
            </div>

            <!-- Service 4 -->
            <div class="service">
                <img src="service4.png" alt="Service 4">
                <h2>Service 4</h2>
                <p>Quisque euismod neque in arcu ullamcorper, eget vestibulum purus ornare.</p>
                <p><strong>Price: ₹250</strong></p>
                <button onclick="addToCart('Service 4', 250)">Add to Cart</button>
            </div>
        </div>

        <!-- Cart Section -->
        <div class="cart">
            <h2>Cart</h2>
            <ul id="cart-items">
                <!-- Cart items will be dynamically added here -->
            </ul>
            <div class="total-price">Total: ₹<span id="total-price">0</span></div>
            <button onclick="checkout()">Checkout</button>
        </div>
    </div>

    <script>
        const cart = [];

        // Function to add items to the cart
        function addToCart(service, price) {
            const existingItemIndex = cart.findIndex(item => item.name === service);
            if (existingItemIndex !== -1) {
                cart[existingItemIndex].quantity += 1;
            } else {
                cart.push({ name: service, price: price, quantity: 1 });
            }
            updateCart();
        }

        // Function to update the cart display
        function updateCart() {
            const cartItems = document.getElementById('cart-items');
            cartItems.innerHTML = '';
            let totalPrice = 0;

            cart.forEach((item, index) => {
                const li = document.createElement('li');
                li.classList.add('cart-item');

                // Create item name and price span
                const nameSpan = document.createElement('span');
                nameSpan.textContent = `${item.name} (₹${item.price})`;

                // Create quantity control buttons
                const quantitySpan = document.createElement('span');
                quantitySpan.textContent = `x${item.quantity}`;

                const increaseButton = document.createElement('button');
                increaseButton.textContent = '+';
                increaseButton.onclick = () => changeQuantity(index, 1);

                const decreaseButton = document.createElement('button');
                decreaseButton.textContent = '-';
                decreaseButton.onclick = () => changeQuantity(index, -1);

                // Append elements to the cart item
                li.appendChild(nameSpan);
                li.appendChild(decreaseButton);
                li.appendChild(quantitySpan);
                li.appendChild(increaseButton);
                cartItems.appendChild(li);

                totalPrice += item.price * item.quantity;
            });

            document.getElementById('total-price').textContent = totalPrice;
        }

        // Function to change quantity of an item in the cart
        function changeQuantity(index, amount) {
            cart[index].quantity += amount;

            if (cart[index].quantity <= 0) {
                cart.splice(index, 1); // Remove item if quantity is zero
            }
            updateCart();
        }

        // Function to proceed to checkout
        function checkout() {
            // Store the cart in local storage to access on the checkout page
            localStorage.setItem('cart', JSON.stringify(cart));
            window.location.href = 'Checkout'; // Replace this with the actual path of your checkout page
        }
    </script>

</body>
</html>
