<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Towing Services</title>
    <style>
        /* General Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            height: 100vh;
            margin: 0;
        }

        .container {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
        }

        /* Map Container */
        .map-container {
            width: 100%;
            height: 100%;
        }

        /* Floating Services Container */
        .services-container {
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            background-color: rgba(255, 255, 255, 0.9);
            width: 90%;
            max-width: 500px;
            padding: 15px;
            border-radius: 10px 10px 0 0;
            box-shadow: 0px -2px 10px rgba(0, 0, 0, 0.1);
            transition: height 0.3s ease-in-out, opacity 0.3s ease-in-out;
            height: 70px;
            opacity: 0.8;
            cursor: pointer;
        }

        .services-container.hovered {
            height: 350px;
            opacity: 1;
            cursor: default;
        }

        /* Handle for the services container */
        .handle {
            width: 40px;
            height: 4px;
            background-color: #ccc;
            border-radius: 2px;
            margin: 0 auto 10px;
        }

        /* Services List */
        h2 {
            text-align: center;
            font-size: 18px;
            margin-bottom: 10px;
        }

        .service-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: none;
        }

        .services-container.hovered .service-list {
            display: block;
        }

        .service-card {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            border-bottom: 1px solid #e0e0e0;
        }

        .service-info {
            display: flex;
            flex-direction: column;
        }

        .service-name {
            font-size: 16px;
            font-weight: bold;
            color: #333;
        }

        .service-price {
            font-size: 14px;
            color: #28a745;
        }

        /* Book Button */
        .book-btn {
            padding: 8px 15px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            margin-top: 5px;
        }

        .book-btn:hover {
            background-color: #0056b3;
        }

        /* Hover State */
        .services-container:hover {
            opacity: 1;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .services-container {
                width: 95%;
                height: 50px;
            }

            .services-container.hovered {
                height: 300px;
            }

            .service-name {
                font-size: 14px;
            }

            .service-price {
                font-size: 12px;
            }

            .book-btn {
                padding: 6px 12px;
                font-size: 12px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Google Maps Container -->
        <div class="map-container">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3770.8417176027664!2d73.85674251539528!3d18.518548174046634!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bc2c0718c6b8c4b%3A0x7aeb57af9bb8e9f3!2sMandhar%20Education%20Society!5e0!3m2!1sen!2sin!4v1695745431177!5m2!1sen!2sin"
              width="100%"
              height="100%"
              style="border: 0;"
              allowfullscreen=""
              loading="lazy"
              title="Google Maps"
            ></iframe>
        </div>

        <!-- Services Container -->
        <div class="services-container">
            <div class="handle"></div>
            <h2>Available Towing Services</h2>
            <ul class="service-list">
                <!-- Service 1 -->
                <li class="service-card">
                    <div class="service-info">
                        <div class="service-name">Ram Bharose Towing</div>
                        <div class="service-price">₹1600</div>
                        <button class="book-btn">Book Now</button>
                    </div>
                </li>

                <!-- Service 2 -->
                <li class="service-card">
                    <div class="service-info">
                        <div class="service-name">Lorem Towing</div>
                        <div class="service-price">₹1550</div>
                        <button class="book-btn">Book Now</button>
                    </div>
                </li>

                <!-- Service 3 -->
                <li class="service-card">
                    <div class="service-info">
                        <div class="service-name">Katraj Towing</div>
                        <div class="service-price">₹1400</div>
                        <button class="book-btn">Book Now</button>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <!-- Optional: Add JavaScript -->
    <script>
        const servicesContainer = document.querySelector('.services-container');

        servicesContainer.addEventListener('mouseenter', function() {
            servicesContainer.classList.add('hovered');
        });

        servicesContainer.addEventListener('mouseleave', function() {
            servicesContainer.classList.remove('hovered');
        });
    </script>
</body>
</html>